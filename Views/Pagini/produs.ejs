<!DOCTYPE html>
<html lang="ro">
<head>
    <meta name="description" content="Cumpără tastaturi de calitate la prețuri competitive. Descoperă o gamă variată de tastaturi pentru gaming, office și programare.">
    <meta name="keywords" content="tastaturi, gaming, office, programare, ergonomic, accesorii, mecanice, membrană, iluminare RGB, wireless">    
    <title>Pagina Produs Tastaturi</title>
    <%- include("../fragmente/head") %>     
    <link href="/Resurse/css/produs.css" type="text/css" rel="stylesheet" />
</head>
<body>
<%- include("../fragmente/header") %>

<main>
    <section>
        <h2>Pagină produs</h2>
        <figure class="imag-produs">
            <img  src="/Resurse/Imagini/produse/<%- locals.prod.imagine %>" alt="[imagine <%- locals.prod.nume %>]" style="width: 500px; height: auto;"/>
        </figure>  
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div id="accordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Descriere produs
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordion">
                    <div class="accordion-body">

                        <p>Descriere: <span class="descriere"><%- locals.prod.descriere %></span></p>
                    </div>
                </div>
            </div>
        
            <!-- Conectivitate -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Conectivitate
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordion">
                    <div class="accordion-body">
                        <p>Conectivitate: <span class="conectivitate"><%- locals.prod.conectivitate %></span></p>
                    </div>
                </div>
            </div>
        
            <!-- Iluminare -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Iluminare
                    </button>
                </h2>
                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordion">
                    <div class="accordion-body">
                        <p>Iluminare: <span class="iluminare"><%- locals.prod.iluminare ? 'Da' : 'Nu' %></span></p>
                    </div>
                </div>
            </div>
        
            <!-- Layout -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFour">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                        Layout
                    </button>
                </h2>
                <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordion">
                    <div class="accordion-body">
                        <p>Layout: <span class="layout"><%- locals.prod.layout || 'N/A' %></span></p>
                    </div>
                </div>
            </div>
        
            <!-- Numar taste -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFive">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                        Numar taste
                    </button>
                </h2>
                <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#accordion">
                    <div class="accordion-body">
                        <p>Numar taste: <span class="numar_taste"><%- locals.prod.numar_taste %></span></p>
                    </div>
                </div>
            </div>
        
            <!-- Tip serviciu -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingSix">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                        Tip serviciu
                    </button>
                </h2>
                <div id="collapseSix" class="accordion-collapse collapse" aria-labelledby="headingSix" data-bs-parent="#accordion">
                    <div class="accordion-body">
                        <p>Tip serviciu: <span class="tip_serviciu"><%- locals.prod.tip_serviciu %></span></p>
                    </div>
                </div>
            </div>
        
            <!-- Tip tastatura -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingSeven">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSeven" aria-expanded="false" aria-controls="collapseSeven">
                        Tip tastatura
                    </button>
                </h2>
                <div id="collapseSeven" class="accordion-collapse collapse" aria-labelledby="headingSeven" data-bs-parent="#accordion">
                    <div class="accordion-body">
                        <p>Tip tastatura: <span class="tip_tastatura"><%- locals.prod.tip_tastatura %></span></p>
                    </div>
                </div>
            </div>
        
            <!-- Categorie -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingEight">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseEight" aria-expanded="false" aria-controls="collapseEight">
                        Categorie
                    </button>
                </h2>
                <div id="collapseEight" class="accordion-collapse collapse" aria-labelledby="headingEight" data-bs-parent="#accordion">
                    <div class="accordion-body">
                        <p>Categorie: <span class="categorie"><%- locals.prod.categorie %></span></p>
                    </div>
                </div>
            </div>
        
            <!-- Specificatii -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingNine">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNine" aria-expanded="false" aria-controls="collapseNine">
                        Specificatii
                    </button>
                </h2>
                <div id="collapseNine" class="accordion-collapse collapse" aria-labelledby="headingNine" data-bs-parent="#accordion">
                    <div class="accordion-body">
                        <p>Specificatii: <span class="specificatii"><%- locals.prod.specificatii.join(', ') %></span></p>
                    </div>
                </div>
            </div>
        </div>                       
        
        <h3>Seturi care includ acest produs</h3>
        <% seturi.forEach(set => { %>
            <div class="set">
                <h4><%= set.nume_set %></h4>
                <p><%= set.descriere_set %></p>
                <ul>
                    <% set.produse.forEach((produs, index) => { %>
                        <li>
                            <a href="/produs/<%= set.produs_ids[index] %>"><%= produs %></a> - <%= set.preturi[index] %> RON
                        </li>
                    <% }) %>
                </ul>
                <p>Preț total: <%= set.pret_total.toFixed(2) %> RON</p>
                <p>Preț final cu reducere: <%= set.pret_final.toFixed(2) %> RON</p>
            </div>
        <% }) %>

    </section>



</main>


<script src="/Resurse/js/produs.js"></script>
<%- include("../fragmente/footer") %>
</body>
</html>
